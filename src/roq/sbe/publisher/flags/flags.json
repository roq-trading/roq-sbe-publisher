{
  "name": "roq/sbe/publisher/flags/Flags",
  "type": "flags",
  "values": [
    {
      "name": "config_file",
      "type": "std/string",
      "validator": "roq::flags::validators::Path",
      "required": true,
      "description": "Config file"
    },
    {
      "name": "snapshot_publish_freq",
      "type": "std/nanoseconds",
      "validator": "roq::flags::validators::TimePeriod",
      "default": "1s",
      "description": "Snapshot publish frequency"
    },
    {
      "name": "encode_buffer_size",
      "type": "std/uint32",
      "default": 1048576,
      "description": "Encode buffer size"
    },
    {
      "name": "max_depth",
      "type": "std/uint16",
      "default": 100,
      "description": "Depth (maximum)"
    }
  ]
}
